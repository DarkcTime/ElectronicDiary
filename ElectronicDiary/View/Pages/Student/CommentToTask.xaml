<Page x:Class="ElectronicDiary.View.Pages.Student.CommentToTask"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicDiary.View.Pages.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CommentToTask">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Name="labelNameTask"></Label>
        <GroupBox 
            Grid.Row="1"
                    Style="{StaticResource StyleGroupBoxTextLong}" Header="Комментарий"
                    >
            <TextBox Style="{StaticResource StyleTextBoxSmall}"
                         Template="{StaticResource TextBoxTemplate}"
                             Name="txtLogin"></TextBox>
        </GroupBox>

        <Grid Grid.Row="3">
            <Grid></Grid>
        </Grid>
    </Grid>
</Page>
